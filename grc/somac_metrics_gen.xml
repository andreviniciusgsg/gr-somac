<?xml version="1.0"?>
<block>
  <name>Metrics generator</name>
  <key>somac_metrics_gen</key>
  <category>[SOMAC]</category>
  <import>import somac</import>
  <make>somac.metrics_gen($debug)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->

  <param>
    <name>Debug</name>
    <key>debug</key>
    <type>bool</type>
    <option>
      <name>True</name>
      <key>True</key>
    </option>
    <option>
      <name>False</name>
      <key>False</key>
    </option>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>new frame in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>mac in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>phy in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>buffer in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>snr in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>ctrl in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>broad out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
