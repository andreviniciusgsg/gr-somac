<?xml version="1.0"?>
<block>
  <name>Sensor</name>
  <key>somac_sensor</key>
  <category>[SOMAC]</category>
  <import>import somac</import>
  <make>somac.sensor($mac, $debug)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Mac addr</name>
    <key>mac</key>
    <type>int_vector</type>
  </param>

  <param>
    <name>Debug mode</name>
    <key>debug</key>
    <type>bool</type>
    <option>
      <name>True</name>
      <key>True</key>
    </option>
    <option>
      <name>False</name>
      <key>False</key>
    </option>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>phy in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>act prot out</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>met out0</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>met out1</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>met out2</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>met out3</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>met out4</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>met out5</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
